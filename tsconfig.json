{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "lib": [ "es2015", "dom" ],
    "noEmitOnError": true,
    "target": "ES6",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
